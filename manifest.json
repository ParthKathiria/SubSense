{
    "manifest_version": 3,
    "name": "SubSense",
    "version": "1.0",
    "description": "Hover over any word in YouTube subtitles to define it.",
    "icons": {
        "16": "icons/ccicon16.png",
        "32": "icons/ccicon32.png",
        "48": "icons/ccicon48.png",
        "128": "icons/ccicon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}